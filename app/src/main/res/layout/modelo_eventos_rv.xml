<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewEventos"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="3dp"
    android:layout_marginStart="3dp"
    android:layout_marginBottom="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <RelativeLayout
                android:id="@+id/layout_titulo"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/layout_circle_objetivo">

                <ImageView
                    android:id="@+id/imagenEvento"
                    android:layout_width="140dp"
                    android:src="@drawable/emporio"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_bar"
                    android:layout_centerInParent="true"
                    android:visibility="visible"/>

                <!--
                                <TextView
                                    android:padding="8dp"
                                    android:id="@+id/tv_titulo"
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="24sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Programa"/>


                <ImageView
                    android:id="@+id/info"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_info"/> -->


            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Avenida 5 de Mayo, cerca de Hidalgo"
                    android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

                <TextView
                    style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color"
                    android:text="Jueves de cervezas al 2x1 te invitamos a que asistas, precios inigualables"
                    android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 Marzo 2018" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/layout_asistir"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Asistir"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>