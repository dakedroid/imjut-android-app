<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:id="@+id/cardViewEventos"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:id="@+id/layout_titulo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/layout_circle_objetivo">

            <ImageView
                android:id="@+id/imagenEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar"
                android:layout_centerInParent="true"
                android:visibility="visible"/>

            <TextView
                android:visibility="invisible"
                android:textColor="@color/white"
                android:background="@drawable/layout_fecha"
                android:padding="5dp"
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/info"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_info"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_asistir"
            android:layout_width="100dp"
            android:layout_height="115dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asistir" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:id="@+id/layout_descripcion"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/titulo_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_evento"
            android:textColor="@color/black"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/descripcionEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descripcion_evento"
            android:textColor="@color/black"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>